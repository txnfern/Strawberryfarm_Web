{
  // ปิด validate CSS มาตรฐาน เพราะเราจะใช้ PostCSS แทน
  "css.validate": false,
  // เปิด validate สำหรับไฟล์ PostCSS
  "postcss.validate": true,
  // บอกให้ IntelliSense รู้จักภาษาในไฟล์ JSX/TSX ด้วย
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescript"
  }
}